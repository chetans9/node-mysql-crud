{{!< main}}
<div class="container">


    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="/customers">Customers</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
    <div id='heading'>
        <h3>Add Customer </h3>
    </div>
    <hr>
    <div id="main-content">
        {{#if isEditForm}}
        <form class="form" action="/customers/{{form.id}}" method="POST">
        {{else}}
                <form class="form" action="/customers" method="POST">
        {{/if}}
            <div class="form-group">

                <label for="first_name">First name:</label>
                <input type="text" class="form-control {{#if errors.first_name}} is-invalid {{/if}}" id="first_name"
                    placeholder="First Name" name="first_name" value="{{form.first_name}}">
                {{#if errors.first_name}}
                <span class="invalid-feedback">
                    <strong>{{ errors.first_name.msg }}</strong>
                </span>
                {{/if}}
            </div>

            <div class="form-group ">
                <label for="last_name">Last name:</label>
                <input type="text" class="form-control {{#if errors.last_name}} is-invalid {{/if}}" id="last_name"
                    placeholder="Last Name" name="last_name" value="{{form.last_name}}">
                {{#if errors.last_name}}
                <span class="invalid-feedback">
                    <strong>{{ errors.last_name.msg }}</strong>
                </span>
                {{/if}}
            </div>
            <div class="form-group">
                <label>Gender : </label>
                <div class="form-check-inline">
                    <input type="radio" name="gender" class="form-check-input  {{#if errors.gender}} is-invalid {{/if}}"
                        id="male" value="M">
                    <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check-inline">

                    <input type="radio" name="gender" id="female"
                        class="form-check-input {{#if errors.gender}} is-invalid {{/if}}" value="F">
                    <label class="form-check-label" for="female">Female </label>

                </div>
                {{#if errors.gender}}
                <span class="invalid-feedback" style="display : block;">
                    <strong>{{ errors.gender.msg }}</strong>
                </span>
                {{/if}}
            </div>

            <div class="form-group">
                <label for="date_of_birth">Date of bitrh :</label>
                <input type="date" class="form-control {{#if errors.date_of_birth}} is-invalid {{/if}}"
                    id="date_of_birth" placeholder="Enter date" name="date_of_birth">
                {{#if errors.date_of_birth}}
                <span class="invalid-feedback">
                    <strong>{{ errors.date_of_birth.msg }}</strong>
                </span>
                {{/if}}
            </div>

            <div class="form-group">
                <label for="address">Address:</label>
                <textarea class="form-control {{#if errors.address}} is-invalid {{/if}}" id="address" placeholder="Enter address" name="address">{{form.address}}</textarea>
                {{#if errors.address}}
                <span class="invalid-feedback">
                    <strong>{{ errors.address.msg }}</strong>
                </span>
                {{/if}}
            </div>

            <div class="form-group">
                <label for="mobile">Mobile:</label>
                <input type="text" class="form-control {{#if errors.mobile}} is-invalid {{/if}}" id="mobile" placeholder="Enter mobile" name="mobile" value="{{form.mobile}}">
                {{#if errors.mobile}}
                <span class="invalid-feedback">
                    <strong>{{ errors.mobile.msg }}</strong>
                </span>
                {{/if}}
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control {{#if errors.email}} is-invalid {{/if}}" id="email" placeholder="Enter email" name="email" value="{{form.email}}">
                {{#if errors.email}}
                <span class="invalid-feedback">
                    <strong>{{ errors.email.msg }}</strong>
                </span>
                {{/if}}
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
</div>